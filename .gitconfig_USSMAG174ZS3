################################################################################
# Diffing
################################################################################
[diff]
    tool = vscode

[difftool]
  prompt = false

[difftool "kdiff3"]
    path = C:/Program Files/KDiff3/kdiff3.exe
    trustExitCode = false

[difftool "vscode"]
    cmd = code --new-window --wait --diff $LOCAL $REMOTE


################################################################################
# Merging
################################################################################
[merge]
    tool = code

[mergetool "kdiff3"]
    path = C:/Program Files/KDiff3/kdiff3.exe
    trustExitCode = false

[mergetool "code"]
  cmd = code --new-window --wait --merge $REMOTE $LOCAL $BASE $MERGED

