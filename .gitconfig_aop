################################################################################
# Merging
################################################################################
[merge]
    tool = code

[mergetool "kdiff3"]
    path = C:/Program Files/KDiff3/kdiff3.exe
    trustExitCode = false

[mergetool "code"]
  cmd = code --new-window --wait --merge $REMOTE $LOCAL $BASE $MERGED

